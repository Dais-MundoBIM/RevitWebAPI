@using DataBase_Web.Data.Models_Tablas;
@model Contact

@{
    ViewData["Title"] = "Eliminar contacto";

}


<h1 class="text-center">Eliminar contacto</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-white">
                <h3 class="text-black">Eliminar Contacto</h3>
            </div>
            <div class="card-body">
                <form asp-action="Delete" method="post" >

                    <input asp-asp-for="ID" type="hidden" /> <!--en este input guardamos el id del contacto en un campo oculto-->





                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingrese nombre" readonly/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingrese correo" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Ingrese telefono" readonly />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Addres" class="control-label"></label>
                        <input asp-for="Addres" class="form-control" placeholder="Ingrese direccion" readonly />
                        <span asp-validation-for="Addres" class="text-danger"></span>
                    </div>


                    <div class="form-group mt-3">
                        <input type="submit" value="Eliminar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>






                </form>


            </div>

        </div>

    </div>









</div>