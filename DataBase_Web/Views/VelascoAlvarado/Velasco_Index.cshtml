@{
    ViewData["Title"] = "I.E. Velasco Alvarado";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold text-primary">I.E. Velasco Alvarado</h1>
            <p class="lead text-muted">Seleccione una especialidad o módulo para gestionar.</p>
            <hr>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 bg-light">
                <div class="card-body text-center p-4">
                    <i class="fa-solid fa-chart-line fa-3x text-success mb-3"></i>
                    <h4>Dashboard de Avance</h4>
                    <p class="small">Visualiza el progreso enviado desde Revit.</p>
                    <a asp-controller="PConstruccion" asp-action="Index" class="btn btn-success w-100 mt-2">Ver Datos</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 bg-light">
                <div class="card-body text-center p-4">
                    <i class="fa-solid fa-cube fa-3x text-primary mb-3"></i>
                    <h4>Modelos BIM</h4>
                    <p class="small">Revisa los contenedores de informacion.</p>
                    <a asp-controller="VelascoAlvarado" asp-action="Velasco_Contenedor" class="btn btn-primary w-100 mt-2">Seleccionar contenedor</a>
                </div>
            </div>
        </div>





        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 bg-light">
                <div class="card-body text-center p-4">
                    <i class="fa-solid fa-tags fa-3x text-info mb-3"></i>
                    <h4>Uniclass</h4>
                    <p class="small">Revisa la clasificación del colegio.</p>
                    <button class="btn btn-info w-100 mt-2 text-white">Ver Detalles</button>
                </div>
            </div>
        </div>
    </div>
</div>